pipeline {
    agent any
    stages {
        stage('Create final folder'){
            steps{
                sh '''
                ${WORKSPACE}/Script/sh/prepare.sh ${WORKSPACE}
                '''
            }
        } 
        stage('Build image'){
            steps{
                sh '''
                ${WORKSPACE}/Script/sh/image.sh
                '''
            }
        } 
        stage('Run container'){
            steps {
                sh '''
                ${WORKSPACE}/Script/sh/container.sh ${WORKSPACE}
                '''
            }
        }
        stage('Sync') {
            steps {
                sh '''
                ${WORKSPACE}/Script/sh/sync.sh ${WORKSPACE}
                '''
            }
        }
        stage('Cleanup') {
            steps {
                sh '''
                ${WORKSPACE}/Script/sh/cleanup.sh 
                '''
            }
        }
    }
    post {
        always {
            cleanWs()
        }
     
    }
}