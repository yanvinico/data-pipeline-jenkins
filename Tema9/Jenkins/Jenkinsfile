pipeline {
    agent any
    stages {
    
        stage('Build the environment'){
            steps {
                sh '''
                ${WORKSPACE}/Tema9/Script/sh/enviroment.sh
                '''
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                ${WORKSPACE}/Tema9/Script/sh/start.sh
                '''
            }
        }
        stage('Sync') {
            steps {
                sh '''
                ${WORKSPACE}/Tema9/Script/sh/sync.sh
                '''
            }
        }
    }
    post {
        always {
            cleanWs()
        }
     
    }
}